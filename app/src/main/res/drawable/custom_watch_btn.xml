<!-- res/drawable/button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Button background color -->
            <solid android:color="#362E61BA" /> <!-- Dark olive green -->

            <!-- Rounded corners -->
            <corners android:radius="10dp" /> <!-- Adjust radius if necessary -->

            <!-- Dark yellow border -->
            <stroke
                android:width="2dp"
                android:color="#0078ff" /> <!-- Dark yellow color (GoldenRod) -->
        </shape>
    </item>
</selector>
